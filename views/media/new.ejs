<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<h2>Upload New Media</h2>
		<ol class="breadcrumb">
			<li><a href="/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
			<li class="active">Media</li>
			<li>Add</li>
		</ol>
	</section>

<style>
	.uploader-inline { border: 4px dashed #b4b9be; }
	.uploader-inline p { margin: 0 auto; text-align: center; padding: 5%; font-size: 20px; }
	.uploader-inline p input[type="file"] { margin: 0 auto; text-align: center; }
	.uploader-inline.hover { border: 10px dashed #0c0; padding: 5%; }
	#holder img { display: block; margin: 10px auto; }
  .bar {
      height: 18px;
      background: green;
  }
</style>

	<!-- Main content -->
	<section class="content">
		<div class="box">
			<div class="box-body">
				<div class="uploader-inline" id="holder">
          <p><input id="fileupload" type="file" name="img" data-url="/admin/media/upload" multiple></p>
					<div id="progress">
              <div class="bar" style="width: 0%;"></div>
          </div>
				</div>
			</div>
      <div id="preview"></div>
		</div>
	</section>
</div>

<script>
    jQuery('#fileupload').fileupload({
        progressall: function (e, data) {
            var progress = parseInt(data.loaded / data.total * 100, 10);
            jQuery('#progress .bar').css('width', progress + '%');
        },
        done: function (e, data) {
            jQuery('#progress .bar').css('width', '0%');
            jQuery.each(data.files, function (index, file) {
                jQuery('#preview').html('<img src="'+file.name+'" />');
            });
        }
    });
</script>

